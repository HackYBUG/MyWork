//---------------------------------------------------------------------------

#ifndef MyVisaH
#define MyVisaH
//---------------------------------------------------------------------------
#include "visa.h"
#include <System.Classes.hpp>
/*
*程控电源切换输出43V和160V电压。

*/
class MyVisa
{
public:
	MyVisa(){
		vi = NULL;
		defaultRM = NULL;
	}
	~MyVisa(){
		if(vi != NULL) viClose(vi); /*关闭仪器句柄和VISA资源管理器*/
		if(defaultRM != NULL) viClose(defaultRM);
	}
	bool __fastcall InitializationUSB();
	void __fastcall InitializationRS232(String Viname);
	void __fastcall SendAndRec();

private:
	ViSession vi;
	ViSession  defaultRM;
};





#endif
